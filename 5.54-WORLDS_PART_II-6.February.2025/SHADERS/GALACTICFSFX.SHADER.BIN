// Contexts

context BACKGROUND
{
    VertexShader = compile GLSL VS_GENERAL;
    PixelShader  = compile GLSL FS_BACKGROUND;
}

context FOREGROUND
{
    VertexShader = compile GLSL VS_GENERAL;
    PixelShader  = compile GLSL FS_FOREGROUND;
    ComputeShader = compile GLSL FS_FOREGROUND;
}

