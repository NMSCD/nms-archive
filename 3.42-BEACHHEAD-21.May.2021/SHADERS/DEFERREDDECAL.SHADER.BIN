context LIT_DEFER
{
	VertexShader = compile GLSL VS_DEFER;
	PixelShader  = compile GLSL FS_LIT_DEFER;
}

context LIT_DEFER_INSTANCE
{
	VertexShader = compile GLSL VS_DEFER_INSTANCE;
	PixelShader  = compile GLSL FS_LIT_DEFER_INSTANCE;

	Instanced = true;
}


