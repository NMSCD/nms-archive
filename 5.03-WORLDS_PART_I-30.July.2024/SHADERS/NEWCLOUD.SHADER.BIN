context [ !MACOS !IOS ] CIRRUS_CLOUDS
{
    VertexShader  = compile GLSL VS_FSQUAD;
    PixelShader   = compile GLSL FS_CIRRUS_RENDER2D;
    ComputeShader = compile GLSL FS_CIRRUS_RENDER2D;
}


