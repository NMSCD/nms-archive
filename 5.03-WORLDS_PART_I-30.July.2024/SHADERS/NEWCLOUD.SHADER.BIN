[[FX]]

// Samplers
sampler gBufferMap = sampler_state
{
    TexUnit = 0;
};

sampler gBuffer1Map = sampler_state
{
    TexUnit = 1;
};

sampler gBuffer2Map = sampler_state
{
    TexUnit = 2;
    Filter = None;
};

sampler gBuffer3Map = sampler_state
{
    TexUnit = 3;
};

sampler gBuffer4Map = sampler_state
{
    TexUnit = 4;
