<!-- Render Albedo to Imposter - Pipeline -->
<Pipeline>
    
  <Setup>

  </Setup>

  <!-- Scene rendering -->
  <CommandQueue>

    <Stage id="SetRenderTarget">
      <BeginTarget target="" />
      <RenderPass ColorAction0="Load/Store" DepthAction="Clear/DontCare" StencilAction="Clear/DontCare" ClearDepthStencil="0/0"/>
    </Stage>

    <Stage id="ClearRenderTarget">
      <ColourMask channels="RGBA"/>
      <ClearTarget depthBuf="true" colBuf0="true" excludeX360="true" col_R="0.0" col_G="0.0" col_B="0.0" col_A="0.0" />
      <RenderPass ColorAction0="Clear/Store" ClearColor="0/0/0/0" DepthAction="Clear/DontCare" StencilAction="Clear/DontCare" ClearDepthStencil="0/0"/>
    </Stage>

    <Stage id="Draw">
      <ColourMask channels="RGBA"/>
      <SetContext zwrite="true" colourWrite="true" cullMode="back" blendMode="replace" depthTest="less" alphaToCoverage="false"/>
      <DoForwardLightLoop type="Mesh" class="Opaque"                context="GEN_IMPOSTER"  contextVariant="ImposterDiffuse"  order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh" class="Cutout"                context="GEN_IMPOSTER"  contextVariant="ImposterDiffuse"  order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh" class="Highlight"             context="GEN_IMPOSTER"  contextVariant="ImposterDiffuse"  order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh" class="Glow"                  context="GEN_IMPOSTER"  contextVariant="ImposterDiffuse"  order="STATECHANGES" />

      <SetContext zwrite="true" colourWrite="true" cullMode="none" blendMode="replace" depthTest="less" alphaToCoverage="true"/>
      <DoForwardLightLoop type="Mesh" class="DoubleSided"           context="GEN_IMPOSTER"  contextVariant="ImposterDiffuse"  order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh" class="HighlightDoubleSided"  context="GEN_IMPOSTER"  contextVariant="ImposterDiffuse"  order="STATECHANGES" />

      <SetContext zwrite="false" colourWrite="true" cullMode="back" blendMode="blend" depthTest="less" />
      <DoForwardLightLoop type="Mesh" class="Translucent"           context="GEN_IMPOSTER"  contextVariant="ImposterDiffuse"  order="STATECHANGES" />

      <SetContext zwrite="false" colourWrite="true" cullMode="back" blendMode="add" depthTest="less" />
      <DoForwardLightLoop type="Mesh" class="Additive"              context="GEN_IMPOSTER"  contextVariant="ImposterDiffuse"  order="STATECHANGES" />

    </Stage>

    <Stage id="UnSetRenderTarget">
      <EndTarget flushCB="true" flushDB="false" />
      <SetContext zwrite="false" colourWrite="true" cullMode="back" blendMode="blend" depthTest="always" alphaToCoverage="false"/>
      <ColourMask channels="RGBA"/>
    </Stage>


  </CommandQueue>

</Pipeline>
