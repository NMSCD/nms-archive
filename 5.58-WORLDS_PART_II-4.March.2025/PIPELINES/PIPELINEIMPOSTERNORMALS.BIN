<!-- Render Normals to Imposter - Pipeline -->
<Pipeline>

  <Setup>

  </Setup>

  <!-- Scene rendering -->
  <CommandQueue>

    <Stage id="SetRenderTarget">
      <BeginTarget target="" />
      <RenderPass ColorAction0="Load/Store" DepthAction="Clear/DontCare" StencilAction="Clear/DontCare" ClearDepthStencil="0/0"/>
    </Stage>

    <Stage id="ClearRenderTarget">
      <ColourMask channels="RGBA"/>
      <!-- when debugging imposter normal textures, set col_A="1.0" -->
      <ClearTarget depthBuf="true" colBuf0="true" excludeX360="true" col_R="1.0" col_G="0.5" col_B="0.5" col_A="0.0" />
      <RenderPass ColorAction0="Clear/Store" ClearColor="1.0/0.5/0.5/0" DepthAction="Clear/DontCare" StencilAction="Clear/DontCare" ClearDepthStencil="0/0"/>
    </Stage>

    <Stage id="Draw">
      <ColourMask channels="RGBA"/>
      <SetContext zwrite="true" colourWrite="true" cullMode="back" blendMode="replace" depthTest="less" alphaToCoverage="false"/>
      <DoForwardLightLoop type="Mesh"     class="Opaque"      context="IMPOSTER" contextVariant="1"    order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh"     class="Cutout"      context="IMPOSTER" contextVariant="1"    order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh"     class="Highlight"   context="IMPOSTER" contextVariant="1"    order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh"     class="Glow"        context="IMPOSTER" contextVariant="1"    order="STATECHANGES" />

      <SetContext zwrite="true" colourWrite="true" cullMode="none" blendMode="replace" depthTest="less" alphaToCoverage="true"/>
      <DoForwardLightLoop type="Mesh"         class="DoubleSided"    context="IMPOSTER" contextVariant="1"             order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh"         class="HighlightDoubleSided"    context="IMPOSTER" contextVariant="1"    order="STATECHANGES" />

      <SetContext zwrite="false" colourWrite="true" cullMode="back" blendMode="blend" depthTest="less" />
      <DoForwardLightLoop type="Mesh"         class="Translucent"    context="IMPOSTER" contextVariant="1"             order="STATECHANGES" />

      <SetContext zwrite="false" colourWrite="true" cullMode="back" blendMode="add" depthTest="less" />
      <DoForwardLightLoop type="Mesh"         class="Additive"    context="IMPOSTER" contextVariant="1"             order="STATECHANGES" />

    </Stage>

    <Stage id="UnSetRenderTarget">
      <EndTarget flushCB="true" flushDB="false" />
      <SetContext zwrite="false" colourWrite="true" cullMode="back" blendMode="blend" depthTest="always" alphaToCoverage="false"/>
      <ColourMask channels="RGBA"/>    
    </Stage>

  </CommandQueue>

</Pipeline>
